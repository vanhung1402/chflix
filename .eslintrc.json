{
  "extends": "next/core-web-vitals",
  "rules": {
    // we want to force semicolons
    "semi": ["error", "always"],
    // we use 2 spaces to indent our code
    "indent": ["error", 2],
    // we want to avoid extraneous spaces
    "no-multi-spaces": ["error"],
    "quotes": ["error", "single"],
    "eol-last": ["error", "always"],
    "jsx-quotes": ["error", "prefer-double"]
  }
}
